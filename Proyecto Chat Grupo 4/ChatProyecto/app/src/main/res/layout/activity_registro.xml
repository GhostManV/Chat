<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"

    android:padding="10sp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_marginTop="35dp"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Click Para Agregar Foto de Perfil"/>

        <EditText
            android:id="@+id/idRegistroNombre"
            android:layout_marginTop="12dp"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_us"
            android:drawablePadding="10dp"
            android:hint="Nombre" />



        <EditText
            android:id="@+id/idRegistroCorreo"
            android:layout_marginTop="12dp"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Correo electronico"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/idRegistroContrasena"
            android:layout_marginTop="12dp"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/idRegistroContrasenaRepetida"
            android:layout_marginTop="12dp"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/txtFechaDeNacimiento"
            android:layout_marginTop="12dp"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawablePadding="10dp"
            android:hint="Fecha de nacimiento"
            android:inputType="date" />



        <RadioGroup
        android:id="@+id/rgGenero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rdHombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hombre"
            android:layout_marginLeft="65dp"
            android:layout_weight="1"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rdMujer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:hint="Mujer"
            android:layout_weight="1"/>
    </RadioGroup>

    <Button
        android:id="@+id/idRegistroRegistrar"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_radiuus_register"
        android:drawableLeft="@drawable/ic_register"
        android:drawablePadding="10dp"
        android:text="Registrar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>